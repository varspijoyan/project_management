{
  "compilerOptions": {
    "target": "es2020",                        
    "module": "commonjs",                      
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,                     
    "skipLibCheck": true,                      
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true             
  },
  "include": ["src/**/*"],                     
  "exclude": ["node_modules", "dist"]          
}
